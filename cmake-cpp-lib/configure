#!/bin/sh

TARGET_NAME=${1}
TARGET_FUNCTION=target${TARGET_NAME}

DEFAULT_TARGET=Debug

target() {
    TARGET=${DEFAULT_TARGET}
    runCmake
}

targetRelease() {
    TARGET=Release
    runCmake
}

targetDebug() {
    TARGET=Debug
    runCmake
}

runCmake() {
    CMAKE_OPTIONS=-DCMAKE_BUILD_TYPE=${TARGET}
    cmake ${CMAKE_OPTIONS} .
}

${TARGET_FUNCTION}

exit 0
