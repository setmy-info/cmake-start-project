#!/bin/sh

TARGET_NAME=${1}
TARGET_FUNCTION=target${TARGET_NAME}

DEFAULT_TARGET=Debug

target() {
    TARGET=${DEFAULT_TARGET}
}

targetRelease() {
    TARGET=Release
}

targetDebug() {
    TARGET=Debug
}

targetCI() {
    targetRelease
}

${TARGET_FUNCTION}
cmake -DCMAKE_BUILD_TYPE=${TARGET} .

exit ${?}
